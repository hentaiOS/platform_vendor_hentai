<resources>
    <!-- Controls can query 2 preferred applications for limited number of suggested controls.
         This config value should contain a list of package names of thoses preferred applications.
    -->
    <string-array name="config_controlsPreferredPackages">
        <item>com.google.android.apps.chromecast.app</item>
    </string-array>

    <!-- Audio product ID -->
    <integer-array name="config_nfc_conflict_with_usb_audio_productid">
        <item>0x00005034</item>
    </integer-array>

    <!-- Audio vendor ID -->
    <integer-array name="config_nfc_conflict_with_usb_audio_vendorid">
        <item>0x000018D1</item>
    </integer-array>

    <!-- SystemUI Plugins that can be loaded on user builds. -->
    <string-array name="config_pluginWhitelist" translatable="false">
        <item>com.android.systemui</item>
        <item>com.android.systemui.plugin.globalactions.wallet</item>
    </string-array>

    <!-- Control whether status bar should distinguish HSPA data icon form UMTS
    data icon on devices -->
    <bool name="config_hspa_data_distinguishable">true</bool>

    <!-- Enable WLC/NFC conflicts -->
    <bool name="config_nfc_conflict_with_usb_audio">true</bool>
    <bool name="config_nfc_conflict_with_wlc">true</bool>
</resources>
